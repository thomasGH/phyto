<p id="notice"><%= notice %></p>

<h1>Listing Herbs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Latin name</th>
      <th>Popular name</th>
      <th>Description</th>
      <th>Activity</th>
      <th>Classification</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @herbs.each do |herb| %>
      <tr>
        <td><%= herb.name %></td>
        <td><%= herb.latin_name %></td>
        <td><%= herb.popular_name %></td>
        <td><%= herb.description %></td>
        <td><%= herb.activity %></td>
        <td><%= herb.classification %></td>
        <td><%= link_to 'Show', herb %></td>
        <td><%= link_to 'Edit', edit_herb_path(herb) %></td>
        <td><%= link_to 'Destroy', herb, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

