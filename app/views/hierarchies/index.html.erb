<h2 class="page-header">Список иерархий</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Название</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hierarchies.each do |hierarchy| %>
      <tr>
        <td><%= hierarchy.name %></td>
        <td><%= link_to '', hierarchy, class: 'fa fa-eye' %></td>
        <td><%= link_to '', edit_hierarchy_path(hierarchy), class: 'fa fa-pencil' %></td>
        <td><%= link_to '', hierarchy, method: :delete, class: 'fa fa-trash-o', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Hierarchy', new_hierarchy_path %>
