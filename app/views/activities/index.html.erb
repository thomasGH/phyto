
<h1>Список активностей</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Уровень</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.level %></td>
        <td><%= link_to '', activity, class: 'fa fa-eye' %></td>
        <td><%= link_to '', edit_activity_path(activity), class: 'fa fa-pencil' %></td>
        <td><%= link_to '', activity, method: :delete, class: 'fa fa-trash-o', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Activity', new_activity_path %>
