<h2 class="page-header"><%= @herb.name %></h2>

<dl class="dl-horizontal">
  <dt>Латинское название:</dt>
  <dd><%= @herb.latin_name %></dd>

  <dt>Народное название:</dt>
  <dd><%= @herb.popular_name %></dd>

  <dt>Описание:</dt>
  <dd><%= @herb.description %></dd>

  <dt>Произростание:</dt>
  <dd><%= @herb.location %></dd>

  <dt>Активность:</dt>
  <dd><%= @herb.activity.level %></dd>

  <dt>Классификация:</dt>
  <dd><%= @herb.classifications.map { |item| item.name }.join(', ') %></dd>

  <dt>Воздействие:</dt>
  <dd><%= @herb.effects.map { |item| item.name }.join(', ') %></dd>
</dl>

<%= link_to 'Edit', edit_herb_path(@herb) %> |
<%= link_to 'Back', herbs_path %>
