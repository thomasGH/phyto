<h1>Список травяных сборов</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Номер</th>
      <th>Название</th>
      <th>Автор</th>
      <th>Описание</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @compositions.each do |composition| %>
      <tr>
        <td><%= composition.number %></td>
        <td><%= composition.name %></td>
        <td><%= composition.author %></td>
        <td><%= composition.description %></td>
        <td><%= link_to '', composition, class: 'fa fa-eye' %></td>
        <td><%= link_to '', edit_composition_path(composition), class: 'fa fa-pencil' %></td>
        <td><%= link_to '', composition, method: :delete, class: 'fa fa-trash-o', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

