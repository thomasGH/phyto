<%= form_for @activity, html: { class: "form-horizontal" } do |f| %>

  <%= render 'common/errors', object: @activity %>

  <div class="form-group">
    <%= f.label 'Уровень', class: 'col-sm-2 control-label' %>
  <div class="col-sm-6">
      <%= f.text_field :level, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-6">
      <%= f.submit class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
