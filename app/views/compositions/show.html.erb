
<p>
  <strong>Номер:</strong>
  <%= @composition.number %>
</p>

<p>
  <strong>Название:</strong>
  <%= @composition.name %>
</p>

<p>
  <strong>Автор:</strong>
  <%= @composition.author %>
</p>

<p>
  <strong>Описание:</strong>
  <%= @composition.description %>
</p>

<% unless @composition.herbs.empty? %>
  <p>
    <strong>Состав:</strong>
  </p>
  <table class="table table-striped">
    <head>
      <tr><th>Название</th><th>Объём</th></tr>
    </head>
    <tbody>
    <% @composition.herbs_compositions.each do |ingredient| %>
      <tr>
        <td><%= link_to ingredient.herb.name, ingredient.herb %></td>
        <td><%= ingredient.part %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>

<%= link_to 'Add/Edit Parts', add_part_path(@composition) %> |
<%= link_to 'Edit', edit_composition_path(@composition) %> |
<%= link_to 'Back', compositions_path %>
